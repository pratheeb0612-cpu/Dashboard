{
  "name": "janashakthi-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend API for Janashakthi Financial Dashboard with Training Environment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-api.js",
    "test:single": "node test-api.js --test",
    "setup": "node seed-data.js",
    "setup:full": "npm install && node seed-data.js",
    "setup:training": "npm install && node seed-data.js && echo '\nðŸŽ‰ Training environment ready! Run: npm run dev'",
    "clean": "rm -rf uploads/* data/* sample-uploads/* templates/*",
    "reset": "npm run clean && npm run setup",
    "health": "curl -s http://localhost:3001/api/health | json_pp",
    "demo": "node seed-data.js && npm run dev",
    "validate": "node test-api.js && echo '\nâœ… All systems operational!'",
    "logs": "tail -f logs/*.log",
    "backup": "cp data/dashboard_data.json data/dashboard_data_backup_$(date +%Y%m%d_%H%M%S).json",
    "create-folders": "mkdir -p uploads data templates logs sample-uploads"
  },
  "keywords": [
    "dashboard",
    "finance",
    "excel",
    "upload",
    "api",
    "janashakthi",
    "kpi",
    "training"
  ],
  "author": "Janashakthi Group",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "axios": "^1.6.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janashakthi/dashboard-backend.git"
  },
  "bugs": {
    "url": "https://github.com/janashakthi/dashboard-backend/issues"
  },
  "homepage": "https://github.com/janashakthi/dashboard-backend#readme",
  "config": {
    "training": {
      "port": 3001,
      "admin_password": "admin123",
      "sample_data": true,
      "auto_seed": true
    }
  },
  "training": {
    "quickStart": [
      "npm run setup:training",
      "npm run dev",
      "Open http://localhost:3001",
      "Login with password: admin123"
    ],
    "testCommands": [
      "npm test - Run all API tests",
      "npm run test:single health - Test specific endpoint",
      "npm run validate - Full system validation"
    ],
    "sampleData": {
      "periods": ["June-2025", "May-2025", "July-2025"],
      "entities": ["janashakthi-limited", "janashakthi-insurance", "first-capital", "janashakthi-finance"],
      "sampleFiles": ["sample-uploads/JXG_Sample_August_2025.xlsx", "sample-uploads/JINS_Sample_August_2025.xlsx"]
    }
  }
}